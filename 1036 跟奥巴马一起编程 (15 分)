#include<stdio.h>

int main(){
	int Lie;
	char C;
	scanf("%d %c",&Lie,&C);//ÊäÈëÁÐÊý 
	
	int Hang;
	if(Lie%2==1)  //ÓÉÁÐ×ª»»³ÉÐÐÊý 
		Hang=(Lie+1)/2;
	else if(Lie%2==0)
		Hang=Lie/2;
	
	
	for(int i=1;i<=Lie;i++){
		printf("%c",C);
	}
	printf("\n");
	
	for(int i=2;i<=Hang-1;i++){
		printf("%c",C);
		for(int i=2;i<=Lie-1;i++){
			printf(" ");
		}
		printf("%c",C);
		printf("\n");
	}
	
		for(int i=1;i<=Lie;i++){
		printf("%c",C);
	}
	printf("\n");
	return 0;
}
